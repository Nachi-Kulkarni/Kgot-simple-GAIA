# Alita-KGoT Enhanced System Environment Configuration
# Copy this file to .env and fill in your actual values

# === API Keys ===
OPENROUTER_API_KEY=your_openrouter_api_key_here
NEO4J_PASSWORD=your_neo4j_password_here
REDIS_PASSWORD=your_redis_password_here
GRAFANA_PASSWORD=your_grafana_password_here

# === Application Configuration ===
NODE_ENV=production
LOG_LEVEL=info

# === Service Ports ===
MANAGER_AGENT_PORT=3000
WEB_AGENT_PORT=3001
MCP_CREATION_PORT=3002
KGOT_CONTROLLER_PORT=3003
MULTIMODAL_PORT=3004
VALIDATION_PORT=3005
OPTIMIZATION_PORT=3006

# === Database Configuration ===
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
RDF4J_URL=http://localhost:8080
REDIS_URL=redis://localhost:6379

# === Security Configuration ===
JWT_SECRET=your_jwt_secret_here
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
SESSION_SECRET=your_session_secret_here

# === File Upload Configuration ===
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads
TEMP_DIR=./temp

# === Monitoring Configuration ===
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# === Model Configuration ===
DEFAULT_MODEL=o3
FALLBACK_MODEL=claude-4-sonnet
MAX_TOKENS=4000
TEMPERATURE=0.1
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# === Cost Management ===
DAILY_COST_LIMIT=50.00
REQUEST_COST_LIMIT=5.00
COST_WARNING_THRESHOLD=0.8

# === Validation Configuration ===
ENABLE_VALIDATION=true
VALIDATION_THRESHOLD=0.8
AUTO_VALIDATION=false

# === Optimization Configuration ===
ENABLE_CACHING=true
CACHE_TTL=3600
ENABLE_COMPRESSION=true
ENABLE_RATE_LIMITING=true

# === Multimodal Configuration ===
ENABLE_VISION=true
ENABLE_AUDIO=true
ENABLE_DOCUMENT_PROCESSING=true
MAX_IMAGE_SIZE=5242880
MAX_AUDIO_SIZE=10485760

# === Docker Configuration ===
COMPOSE_PROJECT_NAME=alita-kgot-enhanced
DOCKER_REGISTRY=your_registry_here

# === Development Configuration ===
DEBUG=alita:*
VERBOSE_LOGGING=false
ENABLE_PROFILING=false 